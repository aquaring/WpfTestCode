        <Button x:Name="FukuButton" Content="福ちゃん" HorizontalAlignment="Left" Margin="499,25,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

        <Image x:Name="BonchanImage" HorizontalAlignment="Left" Height="106" Margin="38,227,0,0" VerticalAlignment="Top" Width="93" Source="images/Bonchan.jpg" RenderTransformOrigin="0.5,0.5">
